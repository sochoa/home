set nocompatible

let mapleader = ","

" Use system clipboard when yanking text
set clipboard^=unnamed,unnamedplus

" Use line numbers by default
set number

" Disable .$FILE.swp file creation
set noswapfile

" Disable backup file creation
set nowritebackup
set nobackup

set cmdheight=2
set shortmess+=c
set signcolumn=yes

set hidden

set hlsearch
